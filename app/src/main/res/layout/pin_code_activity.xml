<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".PinCodeActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/monserrat_bold"
            android:text="Создайте\nпин код"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <View
            android:id="@+id/indicator1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="27dp"
            android:background="@drawable/pin_empty" />

        <View
            android:id="@+id/indicator2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="27dp"
            android:background="@drawable/pin_empty" />

        <View
            android:id="@+id/indicator3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginRight="27dp"
            android:background="@drawable/pin_empty" />

        <View
            android:id="@+id/indicator4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/pin_empty" />
    </LinearLayout>

    <TableLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_transparent"
        android:orientation="vertical"
        android:padding="24dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <TableRow>

            <Button
                android:id="@+id/button1"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="1"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button2"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="2"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button3"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="3"
                android:textSize="32sp" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button4"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="4"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button5"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="5"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button6"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="6"
                android:textSize="32sp" />
        </TableRow>

        <TableRow android:layout_marginTop="20dp">

            <Button
                android:id="@+id/button7"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="7"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button8"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="8"
                android:textSize="32sp" />

            <Button
                android:id="@+id/button9"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_pin_selector"
                android:fontFamily="@font/monserrat_light"
                android:paddingVertical="10dp"
                android:text="9"
                android:textSize="32sp" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/login_button_go_reg"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="100dp"
        app:layout_goneMarginTop="50dp"
        android:background="@drawable/button_black_selector"
        android:fontFamily="@font/monserrat_bold"
        android:paddingVertical="15dp"
        android:text="Выйти"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

</androidx.constraintlayout.widget.ConstraintLayout>